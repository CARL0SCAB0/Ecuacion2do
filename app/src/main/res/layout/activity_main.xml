<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="DIAZ SOTO CARLOS ANTONIO"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FACTORIAL Y NUMERO MARAVILLOSO"
        android:textColor="@color/white"
        android:background="@color/black"
        android:gravity="center"/>
    <EditText
        android:id="@+id/xet"
        android:hint="0000"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>
    <TableRow>

        <Button
            android:id="@+id/xbtn7"
            android:text="7"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtn8"
            android:text="8"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtn9"
            android:text="9"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtnc"
            android:text="C"
            android:backgroundTint="#FFB600"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/xbtn4"
            android:text="4"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtn5"
            android:text="5"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtn6"
            android:text="6"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtnfac"
            android:text="!"
            android:backgroundTint="#FFB600"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/xbtn1"
            android:text="1"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtn2"
            android:text="2"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtn3"
            android:text="3"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtnNM"
            android:text="NM"
            android:backgroundTint="#FFB600"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/xbtn0"
            android:text="0"
            android:layout_span="2"
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtndot"
            android:text="."
            android:backgroundTint="#5E5E5E"/>
        <Button
            android:id="@+id/xbtnres"
            android:text="="
            android:backgroundTint="#FFB600"/>
    </TableRow>
</TableLayout>